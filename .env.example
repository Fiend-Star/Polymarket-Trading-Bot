# Polymarket API Credentials
POLYMARKET_PK=primary_private_key_goes_here
POLYMARKET_FUNDER=funder_address_goes_here
POLYMARKET_API_KEY=your_api_key_goes_here
POLYMARKET_API_SECRET=your_api_secret_goes_here
POLYMARKET_PASSPHRASE=your_passphrase_goes_here

# ── Trading Parameters ──
# MAX_POSITION_SIZE is not currently wired — risk engine hardcodes $1.0
MAX_POSITION_SIZE=3.25
MARKET_BUY_USD=1.00
USE_LIMIT_ORDERS=true
# Trade window: seconds into each 15-min market when early-window can fire
# 180s (3 min) = enough for price discovery after boundary strike capture
# 600s (10 min) = wider window; quant model's own time_remaining >= 1min
#   and theta check protect against trading too late
TRADE_WINDOW_START=180
TRADE_WINDOW_END=600
QUOTE_STABILITY_REQUIRED=5

# ── V3 Quant Model ──
MIN_EDGE_CENTS=0.02
TAKE_PROFIT_PCT=0.30
CUT_LOSS_PCT=-0.50
VOL_METHOD=ewma
DEFAULT_VOL=0.65
BANKROLL_USD=25.0

# ── V2 Heuristic Fallback ──
MIN_FUSION_SIGNALS=2
MIN_FUSION_SCORE=55.0
SPIKE_THRESHOLD=0.05
DIVERGENCE_THRESHOLD=0.05
STOP_LOSS_PCT=0.30

USE_RTDS=true
RTDS_LATE_WINDOW_SEC=15
RTDS_LATE_WINDOW_MIN_BPS=3.0
RTDS_DIVERGENCE_THRESHOLD_BPS=5.0
USE_FUNDING_FILTER=true
LATE_WINDOW_ENABLED=true
